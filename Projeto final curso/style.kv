Loader:
    Home:
    Screen1:
    Screen2:

<Home>
    name: "home"
    MDFloatLayout:
        md_bg_color: "18181B"

        MDTopAppBar:
            title: "[size=20] [color=#000000]CHÁZEN[/size] [/color]"
            right_action_items:
                [
                ["close-box-outline", lambda x: app.fechar(), "Fechar"]
                ]
            elevation: 1
            pos_hint: {'center_x' : 0.5, 'center_y' : 0.96} #posição
            md_bg_color: 1, 1, 1, 1

        FitImage:
            size_hint: .40, .40
            pos_hint: {'center_x' : .5, 'top': .92}
            source: 'image/logo_chazen.png'

        MDLabel:
            text: 'Seja bem-vindo (a) ao app CHÁZEN. Aqui você pode conhecer os mais diversos tipos de chás e seus benefícios'
            halign: "center"
            pos_hint: {'center_x': .5, 'center_y': .50}
            size_hint: .6, .08
            theme_text_color: "Custom"
            text_color: "D4D4D8"

        MDFillRoundFlatButton:
            text: "Lista de chás"
            custom_color: "white"
            halign: "center"
            pos_hint: {'center_x': .5, 'center_y': .35}
            size_hint: .6, .08
            md_bg_color: "FAFAFA"
            font_size: "16"
            on_press:
                app.root.current = 'tela1'
                root.manager.transition.direction = 'left'

        MDFillRoundFlatButton:
            text: "Cuidando de você"
            custom_color: "white"
            halign: "center"
            pos_hint: {'center_x': .5, 'center_y': .25}
            size_hint: .6, .08
            md_bg_color: "FAFAFA"
            font_size: "16"
            on_press:
                app.root.current = 'tela2'
                root.manager.transition.direction = 'left'

