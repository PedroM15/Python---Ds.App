                    secondary_theme_text_color: 'Custom'
                    secondary_text_color: "D4D4D8"
                    tertiary_text: "coadjuvante insulínico."
                    tertiary_theme_text_color: 'Custom'
                    tertiary_text_color: "D4D4D8"
                    tertiary_font_style: 'Body2'
                    IconLeftWidget:
                        icon: "folha.png"

                TwoLineIconListItem:
                    text: "Limão"
                    text_color: "#FFFFFF"
                    theme_text_color: 'Custom'
                    secondary_text: "Ação diurética, coadjuvante insulínico e "
                    secondary_font_style: 'Body2'
                    secondary_theme_text_color: 'Custom'
                    secondary_text_color: "D4D4D8"
                    tertiary_text: "antiinflamatório."
                    tertiary_theme_text_color: 'Custom'
                    tertiary_text_color: "D4D4D8"
                    tertiary_font_style: 'Body2'
                    IconLeftWidget:
                        icon: "folha.png"

                TwoLineIconListItem:
                    text: "Folha de Maracuja"
                    text_color: "#FFFFFF"
                    theme_text_color: 'Custom'
                    secondary_text: "Ação sedativa, antiinflamatória, vermífuga, e "
                    secondary_font_style: 'Body2'
                    secondary_theme_text_color: 'Custom'
                    secondary_text_color: "D4D4D8"
                    tertiary_text: "analgésica."
                    tertiary_theme_text_color: 'Custom'
                    tertiary_text_color: "D4D4D8"
                    tertiary_font_style: 'Body2'
                    IconLeftWidget:
                        icon: "folha.png"

                TwoLineIconListItem:
                    text: "Erva doce"
                    text_color: "#FFFFFF"
                    theme_text_color: 'Custom'
                    secondary_text: "Ação na redução de inchaços e gases e "
                    secondary_font_style: 'Body2'
                    secondary_theme_text_color: 'Custom'
                    secondary_text_color: "D4D4D8"
                    tertiary_text: "melhora a digestão."
                    tertiary_theme_text_color: 'Custom'
                    tertiary_text_color: "D4D4D8"
                    tertiary_font_style: 'Body2'
                    IconLeftWidget:
                        icon: "folha.png"
# ---------------------------------------------


        MDFloatingActionButton:
            icon: "home"
            md_bg_color: 1, 1, 1, 1
            icon_color: "black"
            pos_hint: {'center_x': 0.9, 'center_y' : .07}
            on_press:
                app.root.current = 'home'
                root.manager.transition.direction = 'right'

