                    tertiary_text: " anti-inflamatórias e antioxidantes."
                    tertiary_theme_text_color: 'Custom'
                    tertiary_text_color: "D4D4D8"
                    tertiary_font_style: 'Body2'
                    IconLeftWidget:
                        icon: "folha.png"

                TwoLineIconListItem:
